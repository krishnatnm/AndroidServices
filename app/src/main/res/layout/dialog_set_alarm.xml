<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/dsa_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_margin"
        android:gravity="center_horizontal"
        android:text="Set reminder!"
        android:textColor="@android:color/white" />

    <TimePicker
        android:id="@+id/dsa_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dsa_instruction"
        android:layout_centerHorizontal="true"
        android:numbersSelectorColor="@color/colorPrimary" />

    <Button
        android:id="@+id/dsa_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dsa_time_picker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_margin"
        android:padding="@dimen/activity_margin"
        android:text="okay"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>